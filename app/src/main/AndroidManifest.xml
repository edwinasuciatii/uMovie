<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="movie.com.umovie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/movie_interface_symbol"
        android:label="@string/app_name"
        android:roundIcon="@drawable/movie_interface_symbol"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:preserveLegacyExternalStorage="true"
        android:theme="@style/Theme.UMovie"
        tools:ignore="AllowBackup,UnusedAttribute">
        <activity android:name=".activity.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Movie" />
        <activity android:name=".activity.Genre" />
        <activity android:name=".activity.DetailMovie" />
        <activity android:name=".activity.YoutubePlayerActivity" />
    </application>

</manifest>